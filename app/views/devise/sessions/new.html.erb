<div class="mt-5">
  <h2 class="text-center my-3"><%= t 'devise.strings.login' %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-control mx-auto", style: "max-width: 500px"}) do |f| %>
    <div class="field mb-2">
      <%= f.label :email, class: "form-label fw-bold" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field mb-2">
      <%= f.label :password, class: "form-label fw-bold" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-2">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "BejelentkezÃ©s", class: "btn btn-primary w-100 my-2" %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>


</div>
