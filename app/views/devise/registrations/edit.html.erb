<div class="mt-5">
  <h2 class="text-center my-3"><%= t "devise.strings.edit_user" %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-control mx-auto", style: "max-width: 500px" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-3">
      <%= f.label :email, class: "form-label fw-bold" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field mb-3">
      <%= f.label :password, class: "form-label fw-bold" %> <i class="form-text"><%= t "devise.strings.leave_blank" %></i>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>
        <em class="form-text"><%= t "devise.strings.min_characters", count: @minimum_password_length %></em>
      <% end %>
    </div>

    <div class="field mb-3">
      <%= f.label :password_confirmation, class: "form-label fw-bold" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field mb-3">
      <%= f.label :current_password, class: "form-label fw-bold" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="action mb-3">
      <%= f.submit t("buttons.update"), class: "btn btn-primary w-100 my-2" %>
    </div>


  <% end %>
  <div class="mx-auto" style="max-width: 500px">
    <h5 class="mt-5"><%= t "cancel_account_label" %></h5>
    <%= link_to t("buttons.cancel_account"), registration_path(resource_name), data: { confirm: t("confirm") }, method: :delete, class:"text-danger" %>
    <br>
    <%= link_to t("buttons.back"), :back %>
  </div>

</div>